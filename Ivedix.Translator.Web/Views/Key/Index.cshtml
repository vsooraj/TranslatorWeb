@model KeyViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">@Model.Title List</h3>
    </div>
    <div class="panel-body">
        <div class="col-md-12">
            <p>
                <button type="button" class="btn btn-default btn-group-sm">
                    <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> <a asp-action="Create">Create New</a>
                </button>
            </p>

            <table class="table">
                <tr>
                    <th>
                        Root
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model.Keys)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Root)
                        </td>
                        <td class="text-right">
                            <a asp-action="Edit" asp-route-id="@item.Id"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> </a> |
                            <a asp-action="Details" asp-route-id="@item.Id"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> </a> |
                            <a asp-action="Delete" asp-route-id="@item.Id"><span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span> </a>

                        </td>
                    </tr>
                }
            </table>
        </div>

    </div>
</div>
